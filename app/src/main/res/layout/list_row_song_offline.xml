<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_top"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_toLeftOf="@+id/rel_action"
            android:id="@+id/lin_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            >

            <LinearLayout
                android:id="@+id/lin_CoverImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:background="@drawable/image_bg"
                android:padding="2dp">

                <!-- Thumbnail Image -->
                <ImageView
                    android:id="@+id/ivCoverImage"
                    android:layout_width="@dimen/home_page_vehlist_width"
                    android:layout_height="@dimen/home_page_vehlist_height"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/loader_2" />


            </LinearLayout>

            <LinearLayout
                android:layout_toRightOf="@+id/lin_CoverImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/signin_margin2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSongName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_marginStart="0dp"
                    android:text="Song Name "
                    android:maxLines="1"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:textColor="@color/trans_black_90"
                    android:textSize="@dimen/mycar_card_title_mid"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/tvArtistsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_marginStart="0dp"
                    android:paddingBottom="2dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:text="Rahat Fateh Ali Khan, Momina Mustehsan"
                    android:textColor="@color/light_gray_inactive_icon"
                    android:textSize="@dimen/mycar_card_subtitle"
                    android:textStyle="normal" />



            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="2dp"
        android:background="@color/light_yellow" />
</LinearLayout>

